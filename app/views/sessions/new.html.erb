<h1>Sign In</h1>

<form action="/sessions" method="post">
  <%= auth_token %>

  <label>Name<br>
    <input name="user[name]" type="text"><br>
  </label><br>

  <label>Password<br>
    <input name="user[password]" type="password"><br>
  </label><br>

  <input type="submit" value="Submit" class="btn btn-primary"><br>
</form>